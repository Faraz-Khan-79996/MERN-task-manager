{
    "version": 2,
    "builds": [
      {
        "src": "app.js",
        "use": "@vercel/node"
      },
      {
        "src": "dist/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/api",
        "dest": "app.js"
      },
      {
        "handle": "filesystem"
      },
      {
        "src": "/api/(.*)",
        "dest": "app.js"
      },
      {
        "src": "/",
        "dest": "dist/index.html"
      },
      { "src": "/[^.]+", "dest": "/", "status": 200 },
      {
        "src": "/(.+)",
        "dest": "dist/$1"
      }
    ]
  }